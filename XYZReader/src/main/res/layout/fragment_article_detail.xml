<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/detail_screen_background"
    android:layout_width="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/app_bar_layout"
        app:elevation="@dimen/app_bar_layout_elevation">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:id="@+id/collapsing_toolbar"
            app:title="">

            <com.example.xyzreader.ui.ArticleDetailFragmentImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@color/photo_placeholder"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7"
                android:id="@+id/photo"/>
            
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:actionBarSize"
                app:layout_collapseMode="pin">

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

        <com.example.xyzreader.ui.MaxWidthLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:maxWidth="@dimen/detail_card_max_width"
            app:elevation="@dimen/card_view_elevation">

            <LinearLayout
                android:id="@+id/meta_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:paddingBottom="@dimen/detail_meta_bar_vertical_padding"
                android:paddingLeft="@dimen/detail_meta_bar_horizontal_padding"
                android:paddingRight="@dimen/detail_meta_bar_horizontal_padding"
                android:paddingTop="@dimen/detail_meta_bar_vertical_padding">

                <TextView
                    android:id="@+id/article_title"
                    style="?android:attr/textAppearanceLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/detail_meta_bar_title_padding_bottom"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/detail_screen_article_title"
                    android:textStyle="bold"
                    android:textSize="@dimen/detail_meta_bar_title_text_size"
                    android:lineSpacingMultiplier="@fraction/detail_meta_bar_title_line_spacing_multiplier" />

                <TextView
                    android:id="@+id/article_byline"
                    style="?android:attr/textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/detail_screen_article_byline" />
            </LinearLayout>

        </com.example.xyzreader.ui.MaxWidthLinearLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
        app:fabSize="normal"
        android:id="@+id/share_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_share"
        android:contentDescription="@string/action_share"
        app:layout_anchor="@id/app_bar_layout"
        app:layout_anchorGravity="bottom|end"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginEnd="@dimen/fab_margin"
        app:pressedTranslationZ="@dimen/fab_pressed_translation_z"
        app:elevation="@dimen/fab_elevation"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/detail_screen_background"
        android:layout_marginBottom="@dimen/detail_body_parent_vertical_margin"
        android:layout_marginTop="@dimen/detail_body_parent_vertical_margin"
        android:paddingLeft="@dimen/detail_body_parent_horizontal_padding"
        android:paddingRight="@dimen/detail_body_parent_horizontal_padding"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:id="@+id/article_body"
            style="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/detail_body_horizontal_margin"
            android:layout_marginRight="@dimen/detail_body_horizontal_margin"
            android:layout_marginTop="@dimen/detail_body_top_margin"
            android:paddingBottom="@dimen/detail_body_bottom_margin"
            android:textColorLink="@color/theme_accent"
            android:textSize="@dimen/detail_body_text_size"
            android:textColor="@color/detail_screen_article_body"
            android:lineSpacingMultiplier="@fraction/detail_body_line_spacing_multiplier"/>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>